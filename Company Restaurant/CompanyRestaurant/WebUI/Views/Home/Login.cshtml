@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="text-center">
    <form class="form-signin" asp-action="Login" asp-controller="Home" method="post">

        <h1 class="h3 mb-3 font-weight-normal">Lütfen Giriş Yapınız...</h1>
        <label for="inputEmail" class="sr-only">Email adresi</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Email adresi" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" required="">
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Beni Hatırla
            </label>
        </div>
        <button id="giris" class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap!</button>

    </form>


</body>


<script>


    var btngiris=document.getElementById("giris");
    btngiris.onclick = function () {
        window.alert(" Hoşgeldiniz");
	}
</script>