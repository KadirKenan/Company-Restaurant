@model List<DataAccess.Entity.StorageCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<main class="body-content">
    <div class="ms-content-wrapper box">

        <div class="row">
            <div class="col-md-9">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb pl-0">
                        <li class="breadcrumb-item"><a href="~/Admin/Home"><i class="material-icons">home</i> AnaSayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Depo Ürün Kategorisi</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-3">
                <a class="btn btn-primary float-right" href="~/Admin/StorageCategory/AddStorageCategory">Depo Ürün Kategorisi Ekle</a>
            </div>

            @foreach (var StorageCategory in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="ms-card">
                        <div class="ms-card-img">
                            <img class="catalogPicture" src="~/Content/Picture/@StorageCategory.Picture">
                        </div>
                        <div class="ms-card-body ">
                            <div class="wrapper-new2 ">
                                <h6>@StorageCategory.CategoryName</h6>

                            </div>
                            <a href="#" class="btn btn-primary btn-md btn-block"></a>
                            <a href="~/Admin/StorageCategory/UpdateStorageCategory/@StorageCategory.Id" class="btn btn-gradient-info btn-md ">Düzenle</a>
                            <a href="~/Admin/StorageCategory/DeleteStorageCategory/@StorageCategory.Id" class="btn btn-danger btn-md float-right">Sil</a>

                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

</main>

