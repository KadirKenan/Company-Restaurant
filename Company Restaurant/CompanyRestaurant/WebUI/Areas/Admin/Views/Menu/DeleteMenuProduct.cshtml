@model DataAccess.Entity.MenuProduct
@{
    ViewData["Title"] = "DeleteMenuProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<main class="body-content ">
    <div class="container">
        <div class="form-row">
            <div class="panel">
                <div class="alert alert-danger">
                    <form asp-action="DeleteMenuProduct" method="POST">
                        <h2>@Model.MenuCategory.CategoryName 'deki @Model.MenuName isimli Ürünü'</h2>
                        <span>Silmek istediğinize emin misiniz?</span>
                        <button type="submit" class="btn btn-danger"> Evet Sil</button>
                        <a href="~/Admin/Menu/Index" class="btn">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

