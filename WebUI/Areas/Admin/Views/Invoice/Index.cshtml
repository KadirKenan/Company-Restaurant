@model List<DataAccess.Entity.CustomerOrder>
@{
    ViewData["Title"] = "InvoiceList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
    <main class="body-content">
        <div class="ms-content-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb pl-0">
                            <li class="breadcrumb-item">
                                <a href="~/Admin/Home"><i class="material-icons">home</i>Anasayfa</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">Kapanan Masa Listesi</a>
                            </li>
                        </ol>
                    </nav>
                    <div class="col-12">
                        <div class="ms-panel">
                            <div class="ms-panel-header">
                                <h6>Kapanan Masa Listesi</h6>
                            </div>
                            <div class="ms-panel-body">
                                <div class="table-responsive">
                                    <table class="table table-hover thead-primary">
                                        <thead>
                                            <tr>
                                                <th scope="col">Sipariş ID</th>
                                                <th scope="col">Masa Numarası</th>
                                                <th scope="col">Personel Adı</th>
                                                <th scope="col">Sipariş Tarihi</th>
                                                <th scope="col">Toplam Tutar</th>
                                                <th scope="col">Fatura Gönder</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var invoice in Model)
                                            {
                                                if (@ViewBag.TableNo.Year == 0001)
                                                {
                                            <tr>
                                                <th scope="row">@invoice.Id</th>
                                                <td>@invoice.TableNo</td>
                                                <td>@invoice.AppUser.FirstName @invoice.AppUser.LastName</td>
                                                <td>@ViewBag.TableNo.CloseDate</td>
                                                <td>@invoice.Price</td>
                                                <td>
                                                    <a href="~/Admin/Invoice/GetInvoice/@invoice.Id" class="btn btn-sm btn-gradient-primary">Faturalandır</a>
                                                </td>
                                                <td>
                                                    <a href="~/Admin/Invoice/UpdateInvoice/@invoice.Id" class="btn btn-sm btn-gradient-info">Güncelle</a>
                                                </td>
                                                <td>
                                                    <a href="~/Admin/Invoice/DeleteInvoice/@invoice.Id" class="btn btn-sm btn-danger float-right">Sil</a>
                                                </td>

                                            </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>


