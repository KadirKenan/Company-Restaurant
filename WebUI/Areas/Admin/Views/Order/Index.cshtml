@model List<DataAccess.Entity.CustomerOrder>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">
    <main class="body-content">
        <div class="ms-content-wrapper">
            <div class="row">

                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb pl-0">
                            <li class="breadcrumb-item"><a href="~/Admin/Home"><i class="material-icons">home</i>Anasayfa</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Siparişler</li>

                        </ol>
                    </nav>
                    <div class="col-12">
                        <div class="ms-panel">
                            <div class="ms-panel-header">
                                <h6>Sipariş Listesi</h6>
                            </div>
                            <div class="ms-panel-body">

                                <div class="table-responsive">
                                    <table class="table table-hover thead-primary">
                                        <thead>
                                            <tr>
                                                <th scope="col">Sipariş ID</th>
                                                <th scope="col">Masa Numarası</th>
                                                <th scope="col">Çalışan Adı</th>
                                                <th scope="col">Sipariş Durumu</th>
                                                <th scope="col">Sipariş Tarihi</th>
                                                <th scope="col">Masa Kapatma Tarihi</th>
                                                <th scope="col">Fiyat</th>
                                                <th></th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@order.Id</th>
                                                    <td>@order.TableNo</td>
                                                    <td>@order.Employee.Nickname</td>
                                                    <td>
                                                        @if (@order.Status == true)
                                                        {
                                                            <span> Servis edilmedi</span>
                                                        }
                                                        else
                                                        {
                                                            <span><strong>Servis Edildi</strong></span>
                                                        }
                                                    </td>
                                                    <td>@order.CreatedDate</td>
                                                    <td>
                                                       
                                                    </td>
                                                    <td>
                                                        @foreach (var menu in ViewBag.Menu)
                                                        {
                                                            if (menu.Id == order.MenuId)
                                                            {
                                                                @menu.MenuPrice
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        <a href="~/Admin/Order/GetOrder/@order.Id" class="btn btn-primary float">Görüntüle</a>
                                                        <a href="~/Admin/Order/UpdateOrder/@order.Id" class="btn btn-primary float-right">Düzenle</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
</body>




