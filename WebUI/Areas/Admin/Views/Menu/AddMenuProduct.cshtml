@model DataAccess.Entity.MenuProduct;
@{
    ViewData["Title"] = "AddMenuProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <main class="body-content">
        <div class="ms-content-wrapper">
            <div class="row">
                <div class="col-md-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb pl-0">
                            <li class="breadcrumb-item"><a href="~/Admin/Menu"><i class="material-icons">home</i> Anasayfa</a></li>
                            <li class="breadcrumb-item"><a href="#">Menu</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Menü Ürünü Ekle</li>
                        </ol>
                    </nav>
                </div>
                <form asp-action="AddMenuProduct" asp-controller="Menu" method="post">
                    <div>
                        <div class="row">
                            <div class=" col-md-6">
                                <div class="ms-panel ms-panel-fh">
                                    <div class="ms-panel-header">
                                        <h6>Menü Ekleme Formu</h6>
                                    </div>
                                    <div class="ms-panel-body">

                                        <div class="form-row">
                                            <div class="col-md-12 mb-3">
                                                <label for="validationCustom18">Ürün Adı</label>
                                                <div class="input-group">
                                                    <input name="MenuName" type="text" class="form-control" placeholder="Ürün adını giriniz..." />
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="validationCustom22">Kategori Seçiniz</label>
                                                <div class="input-group">
                                                    @Html.DropDownListFor(x => x.MenuCategoryId, (SelectList)ViewBag.Categories, new { @class = " form-control m-bot15" })
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="validationCustom25">Fiyat</label>
                                                <div class="input-group">
                                                    <input name="MenuPrice" type="number" class="form-control" placeholder="0 TL" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <label for="validationCustom12">Açıklama</label>
                                                <div class="input-group">
                                                    <textarea name="Description" rows="5" class="form-control" placeholder="Ürün tasviri"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <label for="validationCustom12">Kullanılacak Malzeme sayısı</label>
                                                <div class="input-group">
                                                    <input name="StorageProductUnits" type="number" class="form-control" placeholder="0" />
                                                </div>
                                            </div>

                                            <div class="col-md-12 mb-3">
                                                <label for="validationCustom12">Ürün Görseli</label>
                                                <div class="custom-file">
                                                    <input name="MenuImagePath" type="file" class="form-control" id="validatedCustomFile" />
                                                    @*<label class="custom-file-label" for="validatedCustomFile">Görsel yükleyiniz...</label>*@
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-md-6 ">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="ms-panel">
                                            <div class="ms-panel-header">
                                                <h6>Menü Ürünü </h6>
                                            </div>
                                            <div class="ms-panel-body">
                                                <div id="imagesSlider" class="ms-image-slider carousel slide" data-ride="carousel">
                                                    <div class="carousel-inner">
                                                        <div class="carousel-item active">
                                                            <img class="d-block w-100" src="~/hazırcss/assets/img/foodtech/add-product-1.jpg" alt="First slide">
                                                        </div>
                                                        <div class="carousel-item">
                                                            <img class="d-block w-100" src="~/hazırcss/assets/img/foodtech/add-product-2.jpg" alt="Second slide">
                                                        </div>
                                                        <div class="carousel-item">
                                                            <img class="d-block w-100" src="~/hazırcss/assets/img/foodtech/add-product-3.jpg" alt="Third slide">
                                                        </div>
                                                    </div>
                                                    <ol class="carousel-indicators">
                                                        <li data-target="#imagesSlider" data-slide-to="0" class="active"> <img class="d-block w-100" src="~/hazırcss/assets/img/foodtech/add-product-1.jpg" alt="First slide"></li>
                                                        <li data-target="#imagesSlider" data-slide-to="1"><img class="d-block w-100" src="~/hazırcss/assets/img/foodtech/add-product-2.jpg" alt="Second slide"></li>
                                                        <li data-target="#imagesSlider" data-slide-to="2"><img class="d-block w-100" src="~/hazırcss/assets/img/foodtech/add-product-3.jpg" alt="Third slide"></li>
                                                    </ol>
                                                </div>
                                            </div>
                                            <div class="ms-panel-header new">
                                                   
                                                        <label class="btn btn-outline-primary" for="btn-check-outlined"> 
                                                            @Html.CheckBoxFor(x => x.StockStatus, new { @class = "form-control", type = "checkbox", id="btn-check-outlined btn-sm", autocomplete="off" }) Listeye Eklensin mi?
                                                            
                                                        </label>
                                                  
                                               
                                                    <div class="ms-panel-header new">
                                                        <a href="~/Admin/Menu/AddMenuProduct" class="btn btn-secondary d-block" type="submit">Temizle</a>
                                                        <button href="~/Admin/Prescription/AddPrescription" class="btn btn-primary float-end" type="submit">Kaydet</button>


                                                    </div>

                                                </div>

                                            </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            
            </div>
        </div>

    </main>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        $("#validatedCustomFile").change(function () {
            debugger;

            var fileExtension = ['jpeg', 'jpg', 'png', 'gif'];

            if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Lütfen sadece resim formatında dosya yükleyiniz.");

                $("#validatedCustomFile").val("");
            }
            return false;

        });
    });
</script>





